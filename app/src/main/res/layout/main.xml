<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECEC">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/home17"
            android:id="@+id/imageView"
            android:background="#5A5758"
            android:padding="10dp"/>

        <TextView
                android:text="解答一覧     "
                android:layout_width="match_parent"
            android:id="@+id/textView"
                android:background="#5A5758"
                android:textColor="#EDECEC"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:textSize="32dp"
            android:layout_marginTop="0dp"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            tools:ignore="RtlSymmetry,SpUsage,UnusedAttribute" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/edit"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/copy"
            android:id="@+id/imageView3"
            android:layout_weight="1"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/sinki"
            android:id="@+id/imageView4"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:padding="3dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="90">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:ignore="ScrollViewSize">

            <TextView
                android:text="FE_H28春午前問題"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:textSize="20dp"
                android:background="@drawable/border" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:srcCompat="@drawable/syukei"
            android:id="@+id/imageView5"
            android:layout_weight="1"
            android:paddingBottom="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:srcCompat="@drawable/saiten"
            android:id="@+id/imageView6"
            android:layout_weight="1"
            android:paddingBottom="5dp"/>
    </LinearLayout>


</LinearLayout>