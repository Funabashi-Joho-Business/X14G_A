<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECEC">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/home17"
            android:id="@+id/imageView"
            android:background="#5A5758"
            android:padding="10dp"/>

        <EditText
            android:text="FE_H28春午前問題"
            android:layout_width="match_parent"
            android:id="@+id/testtitle"
            android:background="#5A5758"
            android:textColor="#EDECEC"
            android:paddingLeft="-10dp"
            android:paddingTop="0dp"
            android:textSize="32dp"
            android:layout_marginTop="0dp"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/hidari16"
                android:id="@+id/imageView2"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/migi15"
                android:id="@+id/imageView3"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                app:srcCompat="@drawable/camera"
                android:id="@+id/camera"
                android:layout_weight="0"
                android:paddingLeft="180dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0"
        android:background="#5A5758"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:text=" 設 問"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView11"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:textColor="#EDECEC"/>

        <TextView
            android:text="解　　　　　答"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView10"
            android:layout_weight="7"
            android:gravity="center_horizontal|center"
            android:textColor="#EDECEC"/>

        <TextView
            android:text="配 点"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:textColor="#EDECEC"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/kborder">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ok"
            android:id="@+id/editok"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


</LinearLayout>